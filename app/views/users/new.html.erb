<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messges">
      <h3>Form is Invalid</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :user_name %><br>
  <%= f.text_field :name %>
</div><br>
<div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div><br>
<div class="field">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
</div><br>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div><br>
<div class="actions"><%= f.submit %></div>
<br>
<% end %>
<br><br>
<p><a href="/questions">View All Questions</a></p>
